@page
@model Northwind.Gui.Web.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Rediger</h1>

<h4>Ansat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeId" />
            <input type="hidden" asp-for="Employee.Photo" />
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Initials" class="control-label"></label>
                <input asp-for="Employee.Initials" class="form-control" />
                <span asp-validation-for="Employee.Initials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Title" class="control-label"></label>
                <input asp-for="Employee.Title" class="form-control" />
                <span asp-validation-for="Employee.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.TitleOfCourtesy" class="control-label"></label>
                <input asp-for="Employee.TitleOfCourtesy" class="form-control" />
                <span asp-validation-for="Employee.TitleOfCourtesy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.BirthDate" class="control-label"></label>
                <input asp-for="Employee.BirthDate" class="form-control" />
                <span asp-validation-for="Employee.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Address" class="control-label"></label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.City" class="control-label"></label>
                <input asp-for="Employee.City" class="form-control" />
                <span asp-validation-for="Employee.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Region" class="control-label"></label>
                <input asp-for="Employee.Region" class="form-control" />
                <span asp-validation-for="Employee.Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PostalCode" class="control-label"></label>
                <input asp-for="Employee.PostalCode" class="form-control" />
                <span asp-validation-for="Employee.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Country" class="control-label"></label>
                <input asp-for="Employee.Country" class="form-control" />
                <span asp-validation-for="Employee.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.HomePhone" class="control-label"></label>
                <input asp-for="Employee.HomePhone" class="form-control" />
                <span asp-validation-for="Employee.HomePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.WorkPhone" class="control-label"></label>
                <input asp-for="Employee.WorkPhone" class="form-control" />
                <span asp-validation-for="Employee.WorkPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Extension" class="control-label"></label>
                <input asp-for="Employee.Extension" class="form-control" />
                <span asp-validation-for="Employee.Extension" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Notes" class="control-label"></label>
                @Html.TextAreaFor(m => m.Employee.Notes, new { @class = "form-control" })
                <span asp-validation-for="Employee.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.ReportsTo" class="control-label"></label>
                <select asp-for="Employee.ReportsTo" class="form-control" asp-items="ViewBag.ReportsTo"><option value=""></option></select>
                <span asp-validation-for="Employee.ReportsTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhotoPath" class="control-label"></label>
                <input asp-for="Employee.PhotoPath" class="form-control" />
                <span asp-validation-for="Employee.PhotoPath" class="text-danger"></span>
            </div>
            <h3>Ansættelser</h3> <span asp-validation-for="@Model.Employee.Employments" class="text-danger"></span>
            <hr />
            <input type="submit" value="Opret ansættelse" class="btn btn-primary" asp-page-handler="AddEmployment" />
            @for (int i = 0; i < Model.Employee.Employments.Count; i++)
            {
                <div>
                    <h4>@Model.Employee.Employments[i].HireDate.Value.Date.ToShortDateString() - @(Model.Employee.Employments[i].LeaveDate.HasValue ? Model.Employee.Employments[i].LeaveDate.Value.Date.ToShortDateString() : "")</h4>
                    <input type="hidden" asp-for="@Model.Employee.Employments[i].EmployeeId" />
                    <input type="hidden" asp-for="@Model.Employee.Employments[i].EmploymentId" />
                    <div class="form-group">
                        <label asp-for="@Model.Employee.Employments[i].Title" class="control-label"></label>
                        <input asp-for="@Model.Employee.Employments[i].Title" class="form-control" />
                        <span asp-validation-for="@Model.Employee.Employments[i].Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Employee.Employments[i].HireDate" class="control-label"></label>
                        <input asp-for="@Model.Employee.Employments[i].HireDate" class="form-control" />
                        <span asp-validation-for="@Model.Employee.Employments[i].HireDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.Employments[i].LeaveDate" class="control-label"></label>
                        <input asp-for="Employee.Employments[i].LeaveDate" class="form-control" />
                        <span asp-validation-for="Employee.Employments[i].LeaveDate" class="text-danger"></span>
                    </div>
                    <a class="btn btn-danger mb-4" asp-page-handler="Delete" asp-route-id="@Model.Employee.EmployeeId" asp-route-employmentId="@Model.Employee.Employments[i].EmploymentId">Delete</a>
                </div>
            }
            <hr />
            <div class="form-group">
                <input type="submit" value="Rediger" class="btn btn-primary" asp-page-handler="Edit" />
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-page="./Index">Tilbage til listen</a>
</div>

