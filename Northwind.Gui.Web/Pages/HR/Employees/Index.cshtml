@page
@model Northwind.Gui.Web.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "HR - Ansatte";
}

<h1>Ansatte</h1>

<p>
    <a asp-page="Create">Opret ny</a>
</p>
<div class="form-group">
    <form asp-action="Index" method="get">
        <label>Land</label>
        <input class="form-control" type="text" name="country" value="@ViewData["country"]" />
        <label>Stilling</label>
        <input class="form-control" type="text" name="title" value="@ViewData["employmentTitle"]" />
        <label>Region</label>
        <input class="form-control" type="text" name="region" value="@ViewData["region"]" />
        <label>Fornavn</label>
        <input class="form-control" type="text" name="firstName" value="@ViewData["firstName"]" />
        <label>Efternavn</label>
        <input class="form-control" type="text" name="lastName" value="@ViewData["lastName"]" />
        <label>Initialer</label>
        <input class="form-control" type="text" name="initials" value="@ViewData["initials"]" />
        <input class="btn btn-secondary mb-4 mt-4" type="submit" value="Søg" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Title)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].ReportsToNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.ReportsToNavigation.FirstName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeId">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeId">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeId">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
