@page
@model Northwind.Gui.Web.Pages.Ordre.IndexModel

@{
    ViewData["Title"] = "Liste";
}

<h1>Ondre</h1>

<p>
    <a asp-page="Create">Opret ny</a>
</p>
<p>
    <input type="submit" value="Se seneste ordre til afsendelse" class="btn btn-primary" asp-page-handler="GetNextShipments" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipViaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipViaNavigation.CompanyName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderId">Rediger</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderId">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderId">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
